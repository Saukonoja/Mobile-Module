<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fi.jamk.androidkaa.MainActivity">

    <Button
        android:text="Start kaaClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/kaaStart"
        android:onClick="kaaStart"/>

    <Button
        android:text="Attach User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kaaStart"
        android:layout_alignParentStart="true"
        android:id="@+id/attachUser"
        android:onClick="attachUser"/>

    <Button
        android:text="Detach User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attachUser"
        android:layout_alignParentStart="true"
        android:id="@+id/detachUser"
        android:onClick="detachUser"/>

    <Button
        android:text="Event TempRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detachUser"
        android:layout_alignParentStart="true"
        android:id="@+id/event"
        android:onClick="sendTempRequest"/>

</RelativeLayout>
